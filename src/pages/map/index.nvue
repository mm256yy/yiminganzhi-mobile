<template>
  <view class="map-wrap" :style="{ paddingTop: `${statusBarHeight}px` }">
    <image class="bg" src="@/static/images/common_bg.png" mode="widthFix" />
    <view class="common-header">
      <view class="back-box" @click="onBack">
        <uni-icons type="back" color="#ffffff" size="14rpx" />
      </view>

      <text class="tit">定位选择</text>
      <text class="right-btn" @click="onConfirm">确定</text>
    </view>
    <view class="map-content">
      <map
        class="map"
        :enable-satellite="true"
        :enable-overlooking="true"
        :latitude="centerLocation.latitude"
        :longitude="centerLocation.longitude"
        :markers="markers"
        :scale="18"
        @tap="mapTap"
      ></map>
    </view>

    <!-- <view class="map-info">
      <MapInfo />
    </view> -->
  </view>
</template>

<script setup lang="ts">
import { onLoad } from '@dcloudio/uni-app'
import { nextTick, ref, getCurrentInstance, onMounted } from 'vue'
import { routerBack } from '../../utils'
// import MapInfo from './components/MapInfo.vue'

const sysInfo = uni.getSystemInfoSync()
const statusBarHeight = sysInfo.statusBarHeight || 0
const instance = getCurrentInstance()
const _this = instance?.appContext.config.globalProperties

interface LocationType {
  longitude: number
  latitude: number
}

// 初始地图坐标
const centerLocation = ref<LocationType>({
  latitude: 30.235643678475068,
  longitude: 120.17327222279103
})

// 当前地图坐标
const currentLocation = ref<LocationType | null>(null)

// 标记点
// const markers = ref([
//   {
//     latitude: 39.909,
//     longitude: 116.39742,
//     label: {
//       content: '测试哈',
//       color: '#ffffff',
//       fontSize: 16,
//       x: -14,
//       y: -25,
//       bgColor: 'transparent',
//       borderWidth: 0
//     },
//     iconPath:
//       'data:image/png;base64,',
//     width: 92,
//     height: 32
//   }
// ])

// 选点
const markers = ref<any[]>([
  {
    iconPath:
      'data:image/png;base64,',
    width: 50,
    height: 50,
    latitude: 39.909,
    longitude: 116.39742
  }
])

onLoad((option: any) => {
  if (option && option.longitude && option.latitude) {
    console.log(option, 'map - option')
    // 编辑经纬度
    const longitude = option.longitude
    const latitude = option.latitude
    if (!longitude || !latitude || longitude === '0' || latitude === '0') {
      getCurrentLocation()
      return
    }
    currentLocation.value = {
      longitude,
      latitude
    }
    centerLocation.value = {
      longitude,
      latitude
    }
    nextTick(() => {
      if (currentLocation.value) {
        updateMaker([currentLocation.value])
      }
    })
  } else {
    // 新增经纬度
    getCurrentLocation()
  }
})

const onBack = () => {
  routerBack()
}

const updateMaker = (locationArray: LocationType[]) => {
  if (!locationArray || !locationArray.length) {
    return
  }
  const makerList = locationArray.map((item) => {
    return {
      iconPath:
        'data:image/png;base64,',
      width: 50,
      height: 50,
      latitude: item.latitude,
      longitude: item.longitude
    }
  })
  markers.value = makerList
}

const mapTap = (e) => {
  const { longitude, latitude } = e.detail || {}
  if (longitude && latitude) {
    currentLocation.value = {
      longitude,
      latitude
    }
    updateMaker([
      {
        longitude,
        latitude
      }
    ])
  }
}

// 获取当前位置 并标记
const getCurrentLocation = () => {
  uni.getLocation({
    type: 'gcj02',
    success: function (res) {
      const { longitude, latitude } = res
      if (longitude && latitude) {
        centerLocation.value = {
          longitude,
          latitude
        }
        currentLocation.value = {
          longitude,
          latitude
        }
        updateMaker([
          {
            longitude,
            latitude
          }
        ])
      }
    }
  })
}

const onConfirm = () => {
  if (currentLocation.value?.latitude && currentLocation.value?.longitude) {
    uni.$emit('chooseMap', currentLocation.value)
    routerBack()
  } else {
    uni.showToast({
      title: '请选择定位',
      icon: 'none'
    })
  }
}
</script>

